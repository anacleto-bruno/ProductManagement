{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=productmanagement;Username=postgres;Password=postgres123",
    "RedisConnection": "localhost:6379"
  },
  "AzureWebJobsStorage": "UseDevelopmentStorage=true",
  "FeatureFlags": {
    "EnableAdvancedLogging": true,
    "UseRedisCache": true,
    "EnableSwagger": true
  },
  "ExternalServices": {
    "ApiBaseUrl": "https://api.example.com",
    "Timeout": "00:00:30"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ApplicationSettings": {
    "MaxPageSize": 100,
    "DefaultPageSize": 20,
    "CacheExpirationMinutes": 5,
    "MaxRetryCount": 3
  },
  "CacheSettings": {
    "DefaultTtlMinutes": 5,
    "ProductSearchTtlMinutes": 5,
    "ProductDetailTtlMinutes": 10,
    "EnableCacheCompression": true,
    "KeyPrefix": "pm:",
    "MaxCacheKeyLength": 250,
    "EnableCacheMetrics": true,
    "CacheFailureFallbackEnabled": true
  }
}